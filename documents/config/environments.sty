% \autorefを踏まえた環境設定を行うコマンド
\newcommand*{\newaliastheorem}[3]{
	\newaliascnt{#1}{#2}
	\newtheorem{#1}[#1]{#3}
	\aliascntresetthe{#1}
	\expandafter\newcommand\csname #1autorefname\endcsname{#3}
}

